<% provide :title, t("user.edit_user")  %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages", object: @user %>
      <%= f.label :password, t("form.new_password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :password_confirmation, t("form.password_confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <%= f.submit t("user.save_change"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
