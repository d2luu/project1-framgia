<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @user] do |f| %>
      <%= render "shared/error_messages", object: @user %>
    
      <%= f.label :name , t("form.name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, t("form.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, t("form.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("form.password_confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <br>

      <%= f.label :role, t("session.set_type") %>
      <%= f.select :role, @roles %>
      <br>

      <div class="text-center">
        <%= f.submit t("button.submit"), class: "btn btn-primary" %>
      </div>
    <% end %> 
  </div>
</div>
