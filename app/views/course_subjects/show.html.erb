<%= provide :title, @subject.title %>
<div class="col-xs-6 col-md-6 text-center">
  <h1><%= @course.title %></h1>
  <h2><%= t "subjects.title", subject: @subject.title %></h2>
  <h3><%= @subject.description %></h3>
</div>
<div class="col-xs-12 col-md-6">
  <h3><%= t "subjects.tasks" %> (<%= @subject.tasks.count %>)</h3>
  <ol>
    <%= render "task" %>
  </ol>
</div>
