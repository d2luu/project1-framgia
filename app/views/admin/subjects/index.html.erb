<% provide :title, t("subjects.index") %>
<h1><%= t "subjects.index" %></h1>
<div class="col-md-6 col-md-offset-3">
  <% if @subjects.any? %>
    <% @subjects.each do |subject| %>
      <li>
        <h2>
          <%= link_to subject.title, admin_subject_path(subject) %>
        </h2>
        <h5>
          <%= t "subjects.description" %> : <%= subject.description %>
        </h5>
        <%= link_to t("subjects.edit"), edit_admin_subject_path(subject),
          class: "btn btn-success" %>
        <%= link_to t("subjects.delete"), admin_subject_path(subject),
          method: :delete, data: {confirm: t("flash.confirm_delete")},
          class: "btn btn-danger" %>
      </li>
    <% end %>
  <% end %>
</div>
