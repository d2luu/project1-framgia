<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @course] do |f| %>
      <%= render "shared/error_messages", object: @course %>

      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>

      <%= f.label t "subjects.show" %>
      <%= f.collection_check_boxes :subject_ids, @subjects, :id, :title do |s| %>
        <div class="checkbox">
          <%= s.check_box %>
          <%= s.label %>
        </div>
      <% end %>

      <%= f.submit t("courses.#{params[:action]}"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
