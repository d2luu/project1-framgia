<%= provide :title, t("courses.index") %>
<h1><%= t "user.courses_index" %></h1>
<div class="col-md-6 col-md-offset-3">
  <% if @courses.any? %>
    <% @courses.each do |course| %>
      <div>
        <h2><%= link_to course.title, 
          user_course_path(@current_user.id, course) %></h2>
        <h4><%= t "courses.description" %> : <%= course.description %></h4>
      </div>
    <% end %>
  <% end %>
</div>
